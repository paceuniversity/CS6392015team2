<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="20"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:context="com.example.litianyu.automobilemaintenance.setupFragment">

    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"/>


        <TextView
            android:id="@+id/make"
            android:text="@string/make_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="#618bd4"

            android:layout_row="4"
            android:layout_column="0" />


    <EditText
        android:id="@+id/submit_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_row="4"
        android:layout_column="1" />


    <TextView
        android:id="@+id/model"
        android:text="@string/model_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="#618bd4"

        android:layout_row="6"
        android:layout_column="0" />

    <EditText
        android:id="@+id/submit_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"

        android:layout_row="6"
        android:layout_column="1"
         />



    <TextView
        android:id="@+id/year"
        android:text="@string/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="#618bd4"
        android:layout_row="8"
        android:layout_column="0" />

    <EditText
        android:id="@+id/submit_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_row="8"
        android:layout_column="1" />


    <Button
        android:id="@+id/remote_image"
        android:text="@string/button_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_row="10"
        android:layout_column="0"
        />



</GridLayout>
